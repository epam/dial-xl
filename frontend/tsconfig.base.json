{
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "customConditions": ["development"],
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022", "DOM", "DOM.Iterable"],
    "types": ["node", "react", "react-dom"],
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": false,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "paths": {
      "@frontend/canvas-spreadsheet": ["libs/canvasSpreadsheet/src/index.ts"],
      "@frontend/code-editor": ["libs/code-editor/src/index.ts"],
      "@frontend/common": ["libs/common/src/index.ts"],
      "@frontend/common/*": ["libs/common/src/*"],
      "@frontend/parser": ["libs/parser/src/index.ts"]
    }
  }
}
